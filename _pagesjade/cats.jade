|---
|layout: page
|title: Categories
|---
| 
header.jumbotron.page-header
	.page-back
		span.fa-stack-2x
			a(href="../")
				i.fa.fa-arrow-circle-left.page-back-ico
	h1.page-title {{ page.title }}
	hr

.container.cat-list
	|{% for category in site.categories %}
	h2(style="text-transform:capitalize;").cat-name
		| {{ category | first}}
	ul.cat-posts
		|{% for posts in category %}
		|{% for post in posts %}
		|{% if post.url %}
		li
			a(href="{{ post.url }}")
				h3 > {{ post.title }}
		|{% endif %}
		|{% endfor %}
		|{% endfor %}
	|{% endfor %}	